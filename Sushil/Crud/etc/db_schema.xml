<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="sushil_table">
        <column xsi:type="int" name="id_column" padding="10" unsigned="true" nullable="false" comment="Entity Id"/>
        <column xsi:type="varchar" name="firstname" nullable="false" length="255" comment="Firstname"/>
        <column xsi:type="varchar" name="lastname" nullable="false" length="255" comment="Lastname"/>
        <column xsi:type="mediumtext" name="address" nullable="true" comment="Address"/>
        <column xsi:type="int" name="class_id" padding="10" unsigned="true" nullable="false" comment="Class Id"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id_column"/>
        </constraint>
    </table>
</schema>

